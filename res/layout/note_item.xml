<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
  <ImageButton
       android:id="@+id/note_item_delete_bt"
       android:layout_width="200dp"
       android:layout_height="120dp"
       android:layout_marginLeft="10dp"
       android:layout_alignParentRight="true"
       android:layout_centerHorizontal="true"
       android:background="@drawable/note_item_delete_bt"
        />

 <LinearLayout
     android:id="@+id/note_time_lv"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:layout_centerHorizontal="true"
     android:background="@drawable/note_item_bg_icon"
     android:orientation="vertical" >

        <TextView
            android:id="@+id/note_item_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.2"
            android:singleLine="true"
            android:text="今天 18:00 6月12日"/>
        
        <TextView
            android:id="@+id/note_item_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:text="abcdefghijklmnopqrstuvwxyzabcdefghtuvwxyz"/>
   </LinearLayout>
    
</RelativeLayout>
